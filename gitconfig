[user]
    name = Isabella Basso
[sendemail]
    confirm = auto
    smtpEncryption = ssl
    smtpServerPort = 465
[include]
    path = ~/.gitconfig-common
[includeIf "gitdir:~/repos/redhat/"]
    path = ~/.gitconfig-work
[includeIf "gitdir:~/repos/usp/"]
    path = ~/.gitconfig-usp
[credential]
    helper = !pass-git-helper $@
[init]
    defaultBranch = main
[format]
    signOff = true
[push]
    gpgSign = if-asked
[commit]
    gpgSign = true
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    pager = true
    ui = auto
[core]
    autocrlf = input
    pager = diff-so-fancy | less -RFX
[diff]
    tool = nvim
    submodule = log
[difftool]
    prompt = true
[difftool "nvim"]
    cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
[difftool "vscodium"]
    cmd = vscodium --wait --diff \"$LOCAL\" \"$REMOTE\"
[merge]
    conflictstyle = diff3
    tool = nvim
[mergetool]
    prompt = false
[mergetool "nvim"]
    cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
[mergetool "vscodium"]
    cmd = vscodium --wait \"$MERGED\"
[alias]
    br = branch -vv
    st = status -sb
    cs = commit -s
    ca = commit --amend
    can = commit --amend --no-edit
    line = log --oneline --graph
    pf = push -f
    ri = rebase -i
    rh = reset --hard
    save = commit -m "Save" --no-gpg-sign --no-verify
    save-staged = "!f(){\
            git stash --keep-index; \
            git stash push -m \"staged\" --keep-index; \
            git stash pop stash@{1}; \
        };f"
    stash-staged = "!f(){\
            git save-staged; \
            git commit -m \"temp\"; \
            git stash; \
            git reset --hard HEAD^; \
            git stash pop; \
        };f"
    top = rev-parse --show-toplevel
    update = "!f(){\
            git stash --keep-index; \
            git checkout $1; \
            git pull ${2:-origin} $1; \
            git checkout -; \
            git stash pop; \
        };f"
[gpg]
    program = /opt/homebrew/bin/gpg
